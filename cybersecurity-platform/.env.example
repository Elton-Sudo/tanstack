# ==============================================
# CYBERSECURITY PLATFORM - ENVIRONMENT VARIABLES
# ==============================================

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cybersecurity_platform?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Session
SESSION_SECRET="your-session-secret-change-in-production"
SESSION_EXPIRES_IN=86400

# Message Queue (RabbitMQ)
RABBITMQ_URL="amqp://guest:guest@localhost:5672"
RABBITMQ_QUEUE_PREFIX="cybersec"

# Message Queue (Kafka - Alternative)
KAFKA_BROKERS="localhost:9092"
KAFKA_CLIENT_ID="cybersecurity-platform"
KAFKA_GROUP_ID="cybersec-group"

# AWS S3 / MinIO
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET="cybersecurity-platform"
AWS_S3_ENDPOINT="" # For MinIO: http://localhost:9000

# MinIO (Local Development)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_USE_SSL=false
MINIO_BUCKET="cybersecurity-platform"

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Cybersecurity Platform <noreply@cyberplatform.com>"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Multi-Factor Authentication
MFA_ISSUER="Cybersecurity Platform"
MFA_WINDOW=2

# SSO Configuration
# SAML
SAML_ENTRY_POINT="https://idp.example.com/saml/sso"
SAML_ISSUER="cybersecurity-platform"
SAML_CALLBACK_URL="http://localhost:3000/api/v1/auth/sso/saml/acs"
SAML_CERT="your-saml-certificate"

# OAuth (Azure AD / Okta)
OAUTH_CLIENT_ID="your-oauth-client-id"
OAUTH_CLIENT_SECRET="your-oauth-client-secret"
OAUTH_REDIRECT_URI="http://localhost:3000/api/v1/auth/sso/oauth/callback"
OAUTH_AUTHORIZE_URL="https://login.microsoftonline.com/common/oauth2/v2.0/authorize"
OAUTH_TOKEN_URL="https://login.microsoftonline.com/common/oauth2/v2.0/token"

# Video Transcoding
FFMPEG_PATH="/usr/bin/ffmpeg"
TRANSCODING_QUEUE="video-transcoding"

# CDN
CDN_URL="https://cdn.cyberplatform.com"
CDN_INVALIDATION_ENDPOINT=""

# Monitoring & Logging
LOG_LEVEL="debug"
LOG_FILE_PATH="./logs"
LOG_MAX_FILES="14d"

# Prometheus
PROMETHEUS_PORT=9090

# Jaeger (Distributed Tracing)
JAEGER_AGENT_HOST="localhost"
JAEGER_AGENT_PORT=6831
JAEGER_SERVICE_NAME="cybersecurity-platform"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Cors
CORS_ORIGIN="http://localhost:3000,http://localhost:4200"
CORS_CREDENTIALS=true

# API Versioning
API_VERSION="v1"
API_PREFIX="api"

# File Upload
MAX_FILE_SIZE=104857600 # 100MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,application/pdf,application/zip"

# SCORM
SCORM_UPLOAD_PATH="./uploads/scorm"
SCORM_EXTRACT_PATH="./uploads/scorm-extracted"

# Risk Scoring Weights
RISK_PHISHING_WEIGHT=0.25
RISK_TRAINING_COMPLETION_WEIGHT=0.20
RISK_TIME_SINCE_TRAINING_WEIGHT=0.15
RISK_QUIZ_PERFORMANCE_WEIGHT=0.15
RISK_SECURITY_INCIDENTS_WEIGHT=0.15
RISK_LOGIN_ANOMALIES_WEIGHT=0.10

# Compliance Standards
COMPLIANCE_STANDARDS="POPIA,GDPR,SOC2,ISO27001,HIPAA"

# Tenant Settings
DEFAULT_MAX_USERS=100
TRIAL_PERIOD_DAYS=30

# Service Ports (Microservices)
AUTH_SERVICE_PORT=3001
TENANT_SERVICE_PORT=3002
COURSE_SERVICE_PORT=3003
CONTENT_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
REPORTING_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
INTEGRATION_SERVICE_PORT=3008
